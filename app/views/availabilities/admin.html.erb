<div class="row-fluid">
  <div class="span9">
    <table class="table table-bordered table-condensed">
      <thead>
	<tr>
	  <th>Monday</th>
	  <th>Tuesday</th>
	  <th>Wednesday</th>
	  <th>Thursday</th>
	  <th>Friday</th>
	  <th>Saturday</th>
	  <th>Sunday</th>
	</tr>
      </thead>
      <tbody>
	<% for i in 0...@max_length do %>
	<tr>
	  <% @availabilities.each_value do |day|
             time = day.pop
             if time.nil? %>
      <td></td>
      <% else %>
	  <td> <%= time[0].time_of_day.to_time.strftime("%l:%M %p") %>
	    <ul>
              <% time[1].each do |tutor, available| %>
	      <li class="<%=available%> admin-availabilities">
		<%= tutor.name %>
	      </li>
	      <% end %>
	  </ul></td>
	  <% end %>
	  <% end %>
	</tr>
	<% end %>
      </tbody>
    </table>
  </div>
  <div class="span3">
    
    <table class="tutornames table">
      <thead>
	<tr>
	  <th>Tutors</th>
	  <th>Hours</th>
	</tr>
      </thead>
      <tbody>
	<% @tutors.each do |tutor| %>
	<tr>
	  <td><%= link_to tutor.name, tutor, :class => 'tutorname' %></td>
	  <td><%= tutor.hours %></td>
	</tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>
