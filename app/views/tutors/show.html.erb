<%= javascript_include_tag "select_table" %>

<table class="selectable">
  <tr>
    <th>Monday</th>
    <th>Tuesday</th>
    <th>Wednesday</th>
    <th>Thursday</th>
    <th>Friday</th>
    <th>Saturday</th>
    <th>Sunday</th>
  </tr>
  <% for i in 0...@max_length do %>
  <tr>
    <% @availabilitys_by_day.each_value do |times| %>
    <% time = times.pop
       if !time.nil? %>
    <td class="<%=time.available%> option" id="<%=time.id%>"><%= 
	   time.time_of_day.to_time.strftime("%l:%M %p")
	   %></td>
    <% else %>
    <td></td>
    <% end %>
    <% end %>
  </tr>
  <% end %>
</table>

<button id="pref">Preferred</button>
<button id="can">Available</button>
<button id="no">Unavailable</button>
<%= link_to 'Choose Preferred Number of Hours', edit_tutor_path(@tutor.id), :class => 'arrrgputitatthebottom'%>
